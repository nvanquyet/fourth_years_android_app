<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/week_day_background"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <!-- Day Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/week_day_header_background">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_day_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thứ Hai"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:id="@+id/tv_day_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="26 Tháng 6, 2025"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                    </LinearLayout>

                    <!-- Macros Summary -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="P: "
                            android:textColor="@color/nutrition_protein"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_meal_protein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12g"
                            android:textSize="10sp"
                            android:textColor="@color/nutrition_protein"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="C: "
                            android:textSize="10sp"
                            android:textColor="@color/nutrition_carbs"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_meal_carbs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="35g"
                            android:textSize="10sp"
                            android:textColor="@color/nutrition_carbs"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="F: "
                            android:textSize="10sp"
                            android:textColor="@color/nutrition_fat"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_meal_fat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8g"
                            android:textSize="10sp"
                            android:textColor="@color/nutrition_fat"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="F: "
                            android:textSize="10sp"
                            android:textColor="@color/nutrition_fiber"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_meal_fiber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8g"
                            android:textSize="10sp"
                            android:textColor="@color/nutrition_fiber" />

                    </LinearLayout>


                </LinearLayout>
                <!-- Day Stats -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="16dp">

                        <TextView
                            android:id="@+id/tv_day_calories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,850"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#E74C3C" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kcal"
                            android:textSize="10sp"
                            android:textColor="#7F8C8D" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progress_day_calories"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:progress="92"
                        android:progressDrawable="@drawable/progress_circular_small"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:id="@+id/ivExpandArrow"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_chevron_right"
                        android:alpha="0.6" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>