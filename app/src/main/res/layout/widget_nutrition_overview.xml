<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="vertical"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“ˆ Tá»•ng quan dinh dÆ°á»¡ng"
        android:textColor="#333333"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- Kcal row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvKcalLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LÆ°á»£ng Kcal trung bÃ¬nh"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvKcalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥ 1,850 / 2,200"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Kcal progress -->
    <ProgressBar
        android:id="@+id/pbKcal"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:progress="0"
        android:max="100"
        android:progressDrawable="@drawable/bg_widget_progress_kcal"
        android:layout_marginBottom="12dp"/>

    <!-- 4 vÃ²ng trÃ²n: dÃ¹ng ImageView hiá»ƒn thá»‹ bitmap drawArc -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Protein -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgProtein"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="Protein progress"/>

            <TextView
                android:id="@+id/tvProtein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protein"
                android:textSize="12sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <!-- Carbs -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCarbs"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="Carbs progress"/>

            <TextView
                android:id="@+id/tvCarbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carbs"
                android:textSize="12sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <!-- Fat -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgFat"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="Fat progress"/>

            <TextView
                android:id="@+id/tvFat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fat"
                android:textSize="12sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <!-- Fiber -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgFiber"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="Fiber progress"/>

            <TextView
                android:id="@+id/tvFiber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fiber"
                android:textSize="12sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
