<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:strokeColor="@color/primary_green_light"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Ingredient Icon -->
        <ImageView
            android:id="@+id/iv_ingredient_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/ic_launcher_background"
            android:padding="12dp"
            android:src="@drawable/ic_food_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/primary_green"
            tools:src="@drawable/ic_vegetables" />

        <!-- Ingredient Name -->
        <TextView
            android:id="@+id/tv_ingredient_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Cà chua"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/chip_category"
            app:layout_constraintStart_toEndOf="@id/iv_ingredient_icon"
            app:layout_constraintTop_toTopOf="@id/iv_ingredient_icon"
            tools:text="Cà chua" />

        <!-- Quantity -->
        <LinearLayout
            android:id="@+id/ll_quantity_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@id/chip_category"
            app:layout_constraintStart_toEndOf="@id/iv_ingredient_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_ingredient_name">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_quantity"
                app:tint="@color/primary_green" />

            <TextView
                android:id="@+id/tv_ingredient_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="2 kg"
                android:textColor="@color/text_secondary"
                android:textSize="15sp"
                tools:text="2 kg" />

        </LinearLayout>

        <!-- Expiry Date -->
        <LinearLayout
            android:id="@+id/ll_expiry_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@id/chip_category"
            app:layout_constraintStart_toEndOf="@id/iv_ingredient_icon"
            app:layout_constraintTop_toBottomOf="@id/ll_quantity_container">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_calendar"
                app:tint="@color/primary_green" />

            <TextView
                android:id="@+id/tv_expiry_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="25/12/2024"
                android:textColor="@color/text_secondary"
                android:textSize="15sp"
                tools:text="25/12/2024" />

            <!-- Expiry Status Indicator -->
            <View
                android:id="@+id/v_expiry_indicator"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/status_indicator_background"
                android:backgroundTint="@color/success_green"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Category Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rau củ"
            android:textColor="@color/primary_green_dark"
            android:textSize="12sp"
            app:chipBackgroundColor="@color/primary_green_dark"
            app:chipStrokeColor="@color/primary_green"
            app:chipStrokeWidth="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>