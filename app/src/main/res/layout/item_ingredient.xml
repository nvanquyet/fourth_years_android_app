<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_ingredient_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ingredient Name"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_edit_ingredient"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tv_ingredient_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_ingredient_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_edit_ingredient"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tv_expiry_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Expiry Date"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_ingredient_quantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_edit_ingredient"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tv_ingredient_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_expiry_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_edit_ingredient"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_edit_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_delete_ingredient"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_delete_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>