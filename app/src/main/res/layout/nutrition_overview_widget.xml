<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_bg_white"
    android:padding="12dp"
    android:orientation="vertical">

    <!-- Hàng tiêu đề + nút refresh -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📈 Tổng quan dinh dưỡng"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Nút refresh -->
        <ImageView
            android:id="@+id/btnRefresh"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="4dp"
            android:contentDescription="@string/refresh"
            android:src="@drawable/ic_refresh_24" />
    </LinearLayout>

    <!-- Hàng Kcal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvKcalLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lượng Kcal trung bình"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvKcalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đang tải…"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Thanh tiến trình Kcal -->
    <ProgressBar
        android:id="@+id/pbKcal"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:max="100"
        android:progress="0"
        android:progressTint="#4CAF50"
        android:layout_marginBottom="12dp" />

    <!-- 4 macro -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tvProtein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protein\n–/–g"
                android:textSize="12sp"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tvCarbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carbs\n–/–g"
                android:textSize="12sp"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tvFat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fat\n–/–g"
                android:textSize="12sp"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tvFiber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fiber\n–/–g"
                android:textSize="12sp"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
