<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Meal Header -->
        <LinearLayout
            android:id="@+id/layout_meal_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iv_meal_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_breakfast"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_meal_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bữa Sáng"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:layout_marginEnd="32dp"/>

                    <TextView
                        android:id="@+id/tv_meal_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00/00/0000"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tv_meal_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7:30 AM"
                        android:textSize="12sp"
                        android:textColor="#7F8C8D"
                        android:layout_marginEnd="8dp"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="•"
                        android:textColor="#BDC3C7"
                        android:layout_marginEnd="8dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_meal_item_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 món"
                        android:textSize="12sp"
                        android:textColor="#7F8C8D" />

                </LinearLayout>

                <!-- Macros Summary -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P: "
                        android:textColor="@color/nutrition_protein"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_meal_protein"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12g"
                        android:textSize="10sp"
                        android:textColor="@color/nutrition_protein"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C: "
                        android:textSize="10sp"
                        android:textColor="@color/nutrition_carbs"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_meal_carbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="35g"
                        android:textSize="10sp"
                        android:textColor="@color/nutrition_carbs"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F: "
                        android:textSize="10sp"
                        android:textColor="@color/nutrition_fat"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_meal_fat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8g"
                        android:textSize="10sp"
                        android:textColor="@color/nutrition_fat"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F: "
                        android:textSize="10sp"
                        android:textColor="@color/nutrition_fiber"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_meal_fiber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8g"
                        android:textSize="10sp"
                        android:textColor="@color/nutrition_fiber" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/tv_meal_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="450 kcal"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#E74C3C" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_expand_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_expand_more"
                android:rotation="0" />

        </LinearLayout>

        <!-- Food Items List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_food_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="16dp"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

</androidx.cardview.widget.CardView>