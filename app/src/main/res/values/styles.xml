<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Card Styles -->
    <style name="CardStyle.Meal" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius_large</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="strokeWidth">@dimen/card_stroke_width</item>
        <item name="strokeColor">@color/card_stroke_color</item>
    </style>

    <style name="CardStyle.Food" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation_small</item>
        <item name="strokeWidth">@dimen/card_stroke_width</item>
        <item name="strokeColor">@color/card_stroke_color</item>
    </style>

    <!-- Text Styles -->
    <style name="TextStyle.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextStyle.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextStyle.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Chip Styles -->
    <style name="ChipStyle.Priority" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/priority_background</item>
        <item name="android:textColor">@color/priority_text</item>
        <item name="chipCornerRadius">@dimen/chip_corner_radius</item>
        <item name="chipMinHeight">@dimen/chip_min_height</item>
    </style>

    <style name="ChipStyle.Category" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/category_background</item>
        <item name="android:textColor">@color/category_text</item>
        <item name="chipCornerRadius">@dimen/chip_corner_radius_small</item>
        <item name="chipMinHeight">@dimen/chip_min_height_small</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonStyle.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconSize">@dimen/button_icon_size</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="ButtonStyle.Action" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">@dimen/action_button_corner_radius</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>
    <style name="SectionTitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
    </style>

    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryDark">@color/primary_green_dark</item>
        <item name="colorAccent">@color/accent_orange</item>
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Splash Theme -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryDark">@color/primary_green_dark</item>
        <item name="colorAccent">@color/accent_orange</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Auth Theme -->
    <style name="AuthTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryDark">@color/primary_green_dark</item>
        <item name="colorAccent">@color/accent_orange</item>
        <item name="android:windowBackground">@drawable/auth_background</item>
        <item name="android:statusBarColor">@color/primary_green_light</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Custom Button Style -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/primary_green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Secondary Button Style -->
    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeColor">@color/primary_green</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Text Input Style -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_green</item>
        <item name="hintTextColor">@color/primary_green</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- Card Style -->
    <style name="CustomCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Title Text Style -->
    <style name="TitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Subtitle Text Style -->
    <style name="SubtitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Body Text Style -->
    <style name="BodyText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <!-- Caption Text Style -->
    <style name="CaptionText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>