<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Viền ngoài -->
    <solid android:color="#80FFFFFF" /> <!-- Màu trắng mờ (80 = 50% opacity) -->

    <!-- Viền nếu muốn có border -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFFFF" /> <!-- Viền trắng đậm -->

    <!-- Padding nếu muốn khoảng cách -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
